{% extends 'layout.twig' %}

{% block container %}

<div class="row">
    <div class="col-lg-12">
        <h2>Remover Categoria</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <form action="{{ path('remover-categoria', {'id': categoria.id}) }}" method="post" class="form-horizontal">

            <div class="form-group">
                <label>Nome da Categoria</label>
                <input type="text" name="nome" class="form-control" disabled="disabled" value="{{ categoria.nome }}">
            </div>

            <input type="hidden" name="id" value="{{ categoria.id }}">
            <input type="hidden" id="_method" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-info"><i class="glyphicon glyphicon-check"></i> Confirmar</button>
            <a href="{{ path('categorias') }}" class="btn btn-default">Cancelar</a>
        </form>

    </div>
</div>


{% endblock %}
