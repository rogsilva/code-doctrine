{% extends 'layout.twig' %}

{% block container %}

<div class="row">
    <div class="col-lg-12">
        <h2>Lista de Categorias</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-9">
        <a href="{{ path('nova-categoria') }}" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Categoria</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        {% for message in app.session.getFlashBag.get('messageSuccess') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}

        {% for message in app.session.getFlashBag.get('messageFail') %}
            <div class="alert alert-success" role="alert">{{ message }}</div>
        {% endfor %}

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}

                    <tr>
                        <td>{{ categoria.nome }}</td>
                        <td>
                            <a href="{{ path('editar-categoria', {id: categoria.id}) }}" class="btn btn-info btn-sm">Editar</a>
                            <a href="{{ path('remover-categoria', {id: categoria.id}) }}" class="btn btn-danger btn-sm">Remover</a>
                        </td>
                    </tr>

                {% endfor %}
            </tbody>
        </table>
    </div>
</div>


{% endblock %}
