{% extends 'layout.twig' %}

{% block container %}

<div class="row">
    <div class="col-lg-12">
        <h2>Remover Tag</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <form action="{{ path('remover-tag', {'id': tag.id}) }}" method="post" class="form-horizontal">

            <div class="form-group">
                <label>Nome da Tag</label>
                <input type="text" name="nome" class="form-control" disabled="disabled" value="{{ tag.nome }}">
            </div>

            <input type="hidden" name="id" value="{{ tag.id }}">
            <input type="hidden" id="_method" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-info"><i class="glyphicon glyphicon-check"></i> Confirmar</button>
            <a href="{{ path('tags') }}" class="btn btn-default">Cancelar</a>
        </form>

    </div>
</div>


{% endblock %}
