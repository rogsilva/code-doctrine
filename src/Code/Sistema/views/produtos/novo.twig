{% extends 'layout.twig' %}

{% block container %}

<div class="row">
    <div class="col-lg-12">
        <h2>Adicionar Novo Produto</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <form action="{{ path('cadastrar-produto') }}" method="post" class="form-horizontal">

            <div class="form-group">
                <label>Nome do Produto</label>
                <input type="text" name="nome" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label>Descrição do Produto</label>
                <input type="text" name="descricao" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label>Valor do Produto</label>
                <input type="text" name="valor" class="form-control" required="required">
            </div>

            <button type="submit" class="btn btn-info"><i class="glyphicon glyphicon-check"></i> Cadastrar</button>

        </form>

    </div>
</div>


{% endblock %}
