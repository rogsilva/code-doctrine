{% extends 'layout.twig' %}

{% block container %}

<div class="row">
    <div class="col-lg-12">
        <h2>Adicionar Novo Produto</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <form action="{{ path('novo-produto') }}" method="post" class="form-horizontal" enctype="multipart/form-data">

            <div class="form-group">
                <label>Nome do Produto</label>
                <input type="text" name="nome" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label>Descrição do Produto</label>
                <input type="text" name="descricao" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label>Valor do Produto</label>
                <input type="text" name="valor" class="form-control" required="required">
            </div>
            <div class="form-group">
                <label>Categoria</label>
                <select type="text" name="categoria" class="form-control">
                    {% for categoria in categorias %}
                        <option value="{{ categoria.id }}">{{ categoria.nome }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label>Tags</label>
                {% for tag in tags %}
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="tag[]" value="{{ tag.id }}">
                            {{ tag.nome }}
                        </label>
                    </div>
                {% endfor %}
            </div>
            <div class="form-group">
                <label>Imagem</label>
                <input type="file" name="path" class="form-control">
            </div>

            <button type="submit" class="btn btn-info"><i class="glyphicon glyphicon-check"></i> Cadastrar</button>

        </form>

    </div>
</div>


{% endblock %}
