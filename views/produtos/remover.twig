{% extends 'layout.twig' %}

{% block container %}

<div class="row">
    <div class="col-lg-12">
        <h2>Remover Produto</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">

        <form action="{{ path('remover-cadastro-produto') }}" method="post" class="form-horizontal">

            <div class="form-group">
                <label>Nome do Produto</label>
                <input type="text" name="nome" class="form-control" disabled="disabled" value="{{ produto.nome }}">
            </div>
            <div class="form-group">
                <label>Descrição do Produto</label>
                <input type="text" name="descricao" class="form-control" disabled="disabled"  value="{{ produto.descricao }}">
            </div>
            <div class="form-group">
                <label>Valor do Produto</label>
                <input type="text" name="valor" class="form-control" disabled="disabled" value="{{ produto.valor }}">
            </div>

            <input type="hidden" name="id" value="{{ produto.id }}">
            <input type="hidden" id="_method" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-info"><i class="glyphicon glyphicon-check"></i> Confirmar</button>
            <a href="{{ path('produtos') }}" class="btn btn-default">Cancelar</a>
        </form>

    </div>
</div>


{% endblock %}
